<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/puchar"
    android:layout_height="match_parent"
    tools:context=".Gratulacje">

    <TextView
        android:id="@+id/textViewGratulaje"
        android:layout_width="272dp"
        android:layout_height="127dp"
        android:textStyle="bold"
        android:textColor="@color/Czarny"
        android:text="Gratulacje, cel zostaÅ‚ wykonany ;)"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/ok2"
        android:layout_width="197dp"
        android:layout_height="65dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_button_transparent"
        android:shadowColor="@color/Czarny"
        android:text="OK"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGratulaje"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>